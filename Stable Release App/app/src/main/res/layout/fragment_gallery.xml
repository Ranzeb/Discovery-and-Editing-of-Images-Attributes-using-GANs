            <SeekBar
                android:id="@+id/seekBar18"
                android:layout_width="140dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="10dp" />


        </LinearLayout>
    </LinearLayout>
</RelativeLayout>